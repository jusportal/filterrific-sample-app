<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center">User Search</h1>

      <%= form_for_filterrific @filterrific do |f| %>
        <div>
          <div class="form-group">
            <%= f.text_field(
              :search_query,
              class: 'filterrific-periodically-observed form-control',
              placeholder: 'Search'
            ) %>
          </div>
        </div>
      <% end %>
      <%= render(
        partial: 'users/list',
        locals: { users: @users }
      ) %>
    </div>
  </div>
</div>